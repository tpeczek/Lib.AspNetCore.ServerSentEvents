{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Lib.AspNetCore.ServerSentEvents/Lib.AspNetCore.ServerSentEvents.csproj"
          ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": ".."
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/*.yml",
          "toc.md",
          "index.md",
          "articles/getting-started.md",
          "articles/authorization.md",
          "articles/groups.md",
          "articles/disconneting-clients.md",
          "articles/advanced.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "resources/svg/logo.svg",
          "resources/ico/favicon.ico",
          "resources/disconneting-client-flow.png"
        ]
      }
    ],
    "dest": "_artifact",
    "globalMetadata": {
      "_appTitle": "Lib.AspNetCore.ServerSentEvents",
      "_appFooter": "Copyright © 2017 - 2025 Tomasz Pęczek",
      "_appLogoPath": "resources/svg/logo.svg",
      "_appFaviconPath": "resources/ico/favicon.ico",
      "_disableBreadcrumb": true,
      "_disableAffix": true,
      "_disableContribution": true
    }
  }
}